<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_xiaoyu"
    android:paddingTop="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_choose_city_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_choose_city"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iv_choose_city_refresh"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_fun_refresh"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_choose_city_edit"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv_choose_city_edit"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_fun_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_choose_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="20dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
    </GridView>
</LinearLayout>